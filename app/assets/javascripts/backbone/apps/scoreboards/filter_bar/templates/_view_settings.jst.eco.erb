<button class="btn btn-small settings-menu-button dropdown-toggle" data-toggle="dropdown" title="<%= I18n.t 'scoreboard.header.view_selector.settings' %>" id="view-settings-button">
  <span class="fa fa-cog"></span><span class="caret"></span>
</button>

<ul class="dropdown-menu pull-right" role="menu">
  <li class='dropdown-header'>View Options</li>
  <%% for setting in @view_settings: %>
    <%% if setting.settingType == 'radio': %>
      <li class="text-left">
        <a class='change-setting <%% unless setting.enabled: %>disabled<%% end %>' href="" >
          <input type="radio"
                 name="<%%= setting.property %>"
                 data-value="<%%= setting.value %>"
                 <%% unless setting.enabled: %>disabled="disabled" <%% end %>
                 <%% if @optionSelected(setting): %>checked="checked" <%% end %>
                 /> <%%= setting.title %>
        </a>
      </li>
    <%% else if setting.settingType == 'checkbox': %>
      <li class="text-left">
        <a class='change-setting <%% unless setting.enabled: %>disabled<%% end %>' href="">
          <input type="checkbox"
            name="<%%= setting.property %>"
            <%% if setting.trueValue: %>data-true-value="<%%= setting.trueValue %>"<%% end %>
            <%% if setting.falseValue: %>data-false-value="<%%= setting.falseValue %>"<%% end %>
            <%% if @optionSelected(setting): %>checked="checked" <%% end %>
            /> 
          <%%= setting.title %>
        </a>
      </li>
    <%% else if setting.settingType == 'valueCheckbox': %>
      <li class="text-left">
        <a class='change-setting <%% unless setting.enabled: %>disabled<%% end %>' href="">
          <input type="checkbox"
            name="<%%= setting.property %>"
            <%% if setting.trueValue: %>data-true-value="<%%= setting.trueValue %>"<%% end %>
            <%% if setting.falseValue: %>data-false-value="<%%= setting.falseValue %>"<%% end %>
            <%% if @optionSelected(setting): %>checked="checked" <%% end %>
            /> 
          <%% if @optionSelected(setting): %>
            <%%= setting.trueTitle %>
          <%% else: %>
            <%%= setting.falseTitle %>
          <%% end %>
        </a>
      </li>
    <%% end %>
  <%% end %>
  <%% if @view == 'map': %>
    <li class='dropdown-header'>Save Options</li>
    <li class='text-left'>
      <a class="map-save-button" href="#save-map" id="map-save-button">Save</a>
    </li>
    <li class='text-left'>
      <a href="#map-list">View Saved Maps (<%%= @saved_count %>)</a>
    </li>
    
  <%% end %>
</ul>