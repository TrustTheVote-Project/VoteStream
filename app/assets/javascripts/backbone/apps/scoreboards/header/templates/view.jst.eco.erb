<div class="row">
  <div class="span12 title-bar">
    <div class="share pull-right">
      <a href='#' id='js-facebook-share'><%= image_tag "share-facebook.png" %></a>
      <a href='#' id='js-tweet'><%= image_tag "share-twitter.png" %></a>
      <%= image_tag "share-rss.png" %>
    </div>
    <div class="title">
      <%= image_tag "logo-small.png" %>
      <h1>Election Night Reporting</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12 heading-bar">
    <h1><%%= @localityInfo %></h1>
    <div id="voting-info">
      <strong>LIVE Scoreboard</strong>
      for <%%= @electionInfo %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12 filter-bar">
    <div class="row-fluid">
      <div class="span4">
        <label><%= I18n.t 'scoreboard.header.left_menu.label' %></label>
        <div class="selection" id="category-selector-region">
        </div>
      </div>
      <div class="span5">
        <label><%= I18n.t 'scoreboard.header.right_menu.label' %></label>
        <div class="selection" id="region-selector-region">
        </div>
      </div>
      <div class="span1">
        <label><%= I18n.t 'scoreboard.header.view_selector.label' %></label>
        <div class="selection" id="view-selector-region">
        </div>
      </div>
      <div class="span2 reporting">
        <label><%%= @percentReporting %>% reporting</label>
        <a href="#" id="js-precinct-status" class="selection">Precinct Status</a>
        <div class="precinct-status popover">
          <div class="popover-content">
            <div class="popover-body" id="precinct-status-region">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

