$default: #888;
$padding: 5px;
$header-height: 15px;
$unselected-header-bg: #fff;
$unselected-header-fg: #133a54;
$selected-header-bg: #fff;
$selected-header-fg: #133a54;
$party-color: #808080;

@mixin panel() {
  box-shadow: 2px 6px 30px rgba(black, 0.3);
  transition: all 0ms;
  padding: 0 20px;
  cursor: pointer;
  position: relative;

  .header {
    background: $unselected-header-bg;
    color: $unselected-header-fg;
    //margin-bottom: 10px;
    padding: 10px 0;
    position: relative;

    h5 {
      font-size: 18px;
      margin: 0;
      line-height: $header-height * 2;
    }
  }
}

#list {
  #content > div {
    position: relative;
  }

  #participation-info .panel {
    padding-bottom: 20px;
    .info {
      margin-bottom: 10px;
    }
  }

  #map-region {
    @include panel();
    padding: 0;

    display: block;
    height: 340px;
    opacity: 0;
    position: absolute;
    right: 0;
    top: 0;

    #map-view {
      height: 100%;
    }
  }

  #results {
    clear: both;
  }

  #sidebar {
    box-shadow: 2px 6px 30px rgba(black, 0.3);
    border-top: none;
    opacity: 0;
    transition: opacity 0ms;

    &.active {
      opacity: 1;
    }
  }

  .show-more-less {
    background: #f3f3f3;
    border-top: 1px solid #e3e3e3;
    text-align: center;
    font-size: 12px;
    margin-bottom: 10px;
    margin: 0 (-2*10px);
    padding: 10px/5 10px;
    a {
      color: #093A52;
    }
  }

  .percent-reporting {
    box-sizing: border-box;
    //margin-bottom: 10px;
    padding: 0 10px 0 20px;
  }

  .header.bar {
    background: #808080;
    line-height: 30px;
    margin: 0 0 20px;
    padding: 0 20px;
  }

  table {
    width: 100%;
    font-size: 85%;
    table-layout: fixed;
  }

  .lr-v, .lr-p {
    width: 50px;
    text-align: right;
  }
  .lr-n {
    padding-left: $padding;
  }
  .lr-p {
    padding-right: $padding;
  }

  .lr-n, .lr-a {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .lr-a {
    width: 250px;
  }

  .result {
    margin-bottom: 30px;
    position: relative;
    *zoom: 1;

    &:before, &:after {
      content: " ";
      display: table;
    }

    &:after {
      clear: both;
    }

    &.selected {
      .panel {
        box-shadow: 2px 6px 30px rgba(black, 0.5);

        &.summary:after {
          content: " ";
          border: 20px solid transparent;
          border-left-color: white;
          //box-shadow: 2px 6px 30px rgba(black, 0.5);
          position: absolute;
          left: 100%;
          top: 40px;
          z-index: 2;
        }
      }

      #map-region {
        opacity: 1;
      }
    }

    .panel {
      @include panel();
    }

    &.selected {
      .header {
        background: $selected-header-bg;
        color: $selected-header-fg;
      }
      .header:after {
        left: 100%;
        top: 50%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        border-color: rgba(136, 183, 213, 0);
        border-left-color: $selected-header-bg;
        border-width: $header-height;
        margin-top: -$header-height;
      }
    }

    .candidate {
      border-top: 1px solid #e6e6e6;
      padding: 10px 0;

      &.winner h5 {
        &.republican:before {
          content: "";
          background-image: image-url("check-r.png");
        }

        &.democratic-farmer-labor:before {
          content: "";
          background-image: image-url("check-dfl.png");
        }

        &:before {
          content: "";
          background-image: image-url("check-o.png");
          background-size: 20px 20px;
          height: 20px;
          width: 20px;
          position: absolute;
          left: 0px;
        }
      }
    }

    .row-fluid {
      min-height: 24px;

      [class*="span"] {
        min-height: 24px;
      }
    }

    .party, .votes {
      color: $party-color;
      //font-size: 85%;
    }

    h5, .percent {
      font-size: 18px;
      font-weight: bold;
      margin: 0;
      text-transform: capitalize;
    }

    .bar {
      width: 100%;
      height: 10px;
      margin-bottom: 10px;
      //background: $bar-base;
    }

    .percent, .votes {
      text-align: right;
    }

    .filler {
      height: 10px;
      background: #bbb;
    }
  }
}

@media (max-width: 767px) {
  #list {
    overflow-x: scroll;
  }

  #list > .row {
    width: 150%;
  }

  #list #results-region {
    float: left;
    width: 48%;
  }

  #list #sidebar {
    float: left;
    margin-left: 4%;
    width: 48%;
  }

  #list #map-region {
    padding: 0;
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #list .lr-a {
    width: auto;
  }
}
