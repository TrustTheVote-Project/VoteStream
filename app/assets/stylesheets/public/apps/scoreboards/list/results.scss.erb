$default: #888;
$padding: 5px;
$header-height: 15px;
$unselected-header-bg: #d8d8d8;
$unselected-header-fg: #444;
$selected-header-bg: #888;
$selected-header-fg: #fff;

#list {
  #map {
    height: 350px;
  }

  table {
    width: 100%;
    font-size: 85%;
    table-layout: fixed;
  }

  .lr-v, .lr-p {
    width: 50px;
    text-align: right;
  }
  .lr-n {
    padding-left: $padding;
  }
  .lr-p {
    padding-right: $padding;
  }

  .lr-n, .lr-a {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .lr-a {
    width: 250px;
  }

  .result {
    margin-bottom: 10px;
    cursor: pointer;

    .header {
      background: $unselected-header-bg;
      color: $unselected-header-fg;
      padding: 0 $padding;
      position: relative;
      h5 {
        margin: 0;
        line-height: $header-height * 2;
      }
    }

    &.selected {
      .header {
        background: $selected-header-bg;
        color: $selected-header-fg;
        margin-right: $header-height;
      }
      .header:after {
        left: 100%;
        top: 50%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        border-color: rgba(136, 183, 213, 0);
        border-left-color: $selected-header-bg;
        border-width: $header-height;
        margin-top: -$header-height;
      }
    }

    td {
      color: $default;
    }
  }
}

@media (max-width: 767px) {
  #list {
    overflow-x: scroll;
  }

  #list > .row {
    width: 150%;
  }

  #list #results-region {
    float: left;
    width: 48%;
  }

  #list #sidebar {
    float: left;
    margin-left: 4%;
    width: 48%;
  }

  #list #map-region {
    padding: 0;
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #list .lr-a {
    width: auto;
  }
}
