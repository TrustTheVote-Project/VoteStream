$bar-base: #e1e5e5;
$republican: <%= AppConfig['party_colors']['republican'] %>;
$democrat: <%= AppConfig['party_colors']['democrat'] %>;

#results-summary-region {
  #js-next-refcon { text-align: right; }

  .refcon-nav {
    
    a {
      display: block;
      width: 25px;

      color: #000;
      font-size: 18px;

      &[disabled] {
        color: #ddd;
        cursor: default;
      }
    }
  }
}

#summary-region {
  width: 100%;

  ul {
    list-style: none;
    margin: 0;

    li {
      margin-bottom: 10px;
    }

    h5 {
      margin: 0;
    }

    .bar {
      width: 100%;
      height: 20px;
      background: $bar-base;
    }

    .meta {
      overflow: hidden;
      .percent {
        float: right;
      }
    }

    .filler {
      height: 20px;
      background: #bbb;
    }

    .party-republican, .response-yes {
      h5 { color: $republican; }
      .filler { background: $republican; }
    }

    .party-democraticfarmerlabor, .response-no {
      h5 { color: $democrat; }
      .filler { background: $democrat; }
    }

  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #results-summary-region {
    padding-bottom: 10px;
  }
}
