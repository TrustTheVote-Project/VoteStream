@import 'public/_config';

$bar-base: #e1e5e5;
$pagination-bar-bg: #F3F3F3;
$summary-row-padding: 10px;
$party-color: #808080;

#results-summary-region {
  box-shadow: 2px 6px 30px rgba(black, 0.3);
  margin-bottom: 3*$summary-row-padding;
}

#js-next-refcon, #js-prev-refcon {
  a {
    display: block;
    width: 20px;
    height: 20px;
    margin: 5px 2*$side-padding;
    background-size: 20px;
    background-repeat: no-repeat;
    background: #DDDCDC;
    text-decoration: none;

    &[disabled] {
      opacity: .5;
      cursor: default;
    }
  }
}
#js-prev-refcon a { background-image: image-url('contest_carousel_left_icon_normal.png'); }
#js-next-refcon a { float: right; background-image: image-url('contest_carousel_right_icon_normal.png'); }

#summary-pagination {
  .info {
    text-align: center;
    line-height: 30px;
  }

  background-color: $pagination-bar-bg;
  border: 1px solid #E3E3E3;
  border-bottom: none;
}



#summary-region {
  padding: 0 2*$side-padding;
  border: 1px solid #E3E3E3;

  small {
    display: block;
  }

  small:first-child {
    color: #808080;
    margin-top: 10px;
  }

  h4 {
    color: #093A52;
    margin: 0;
  }

  h4 + small {
    color: #3fa9f5;
  }

  ul {
    list-style: none;
    margin: 0 -20px;
    max-height: 492px;
    padding: 0 20px;
    overflow: scroll;

    li {
      border-top: 1px solid #E6E6E6;
      padding-top: $summary-row-padding;
      margin-top: $summary-row-padding;
      position: relative;

      &.winner h5 {
        &.republican:before {
          content: "";
          background-image: image-url("check-r.png");
        }

        &.democratic-farmer-labor:before {
          content: "";
          background-image: image-url("check-dfl.png");
        }

        &:before {
          content: "";
          background-image: image-url("check-o.png");
          background-size: 20px 20px;
          height: 20px;
          width: 20px;
          position: absolute;
          left: -20px;
        }
      }
    }

    .party, .votes {
      color: $party-color;
      //font-size: 85%;
    }

    h5, .percent {
      font-size: 18px;
      font-weight: bold;
      margin: 0;
      text-transform: capitalize;
    }

    .bar {
      width: 100%;
      height: 10px;
      background: $bar-base;
      margin-bottom: 10px;
    }

    .percent, .votes {
      text-align: right;
    }

    .filler {
      height: 10px;
      background: #bbb;
    }
  }

  .show-more-less {
    background: #f3f3f3;
    border-top: 1px solid #e3e3e3;
    text-align: center;
    font-size: 12px;
    margin-bottom: $summary-row-padding;
    margin: 0 (-2*$summary-row-padding);
    padding: $summary-row-padding/5 $summary-row-padding;
    a {
      color: #093A52;
    }
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #results-summary-region {
    padding-bottom: 10px;
  }
}
