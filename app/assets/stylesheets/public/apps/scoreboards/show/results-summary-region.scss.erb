$bar-base: #e1e5e5;

#js-next-refcon, #js-prev-refcon {
  a {
    display: block;
    width: 20px;
    height: 20px;
    background-size: 20px;
    background-repeat: no-repeat;
    text-decoration: none;

    &[disabled] {
      opacity: .5;
      cursor: default;
    }
  }
}

#summary-pagination .info { text-align: center; }
#js-prev-refcon a { background-image: image-url('contest_carousel_left_icon_normal.png'); }
#js-next-refcon a { float: right; background-image: image-url('contest_carousel_right_icon_normal.png'); }



#summary-region {
  width: 100%;

  ul {
    list-style: none;
    margin: 0;

    li {
      margin-bottom: 10px;
    }

    h5 {
      margin: 0;
    }

    .bar {
      width: 100%;
      height: 20px;
      background: $bar-base;
    }

    .meta {
      overflow: hidden;
      .percent {
        float: right;
      }
    }

    .filler {
      height: 20px;
      background: #bbb;
    }
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #results-summary-region {
    padding-bottom: 10px;
  }
}
