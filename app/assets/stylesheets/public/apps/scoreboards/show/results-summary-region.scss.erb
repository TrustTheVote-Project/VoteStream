@import 'public/_config';

$bar-base: #e1e5e5;
$pagination-bar-bg: #F3F3F3;
$summary-row-padding: 10px;
$party-color: #808080;

#results-summary-region {
  box-shadow: 0 0 10px rgba(0, 0, 0, .3);
}

#js-next-refcon, #js-prev-refcon {
  a {
    display: block;
    width: 20px;
    height: 20px;
    margin: 5px $side-padding;
    background-size: 20px;
    background-repeat: no-repeat;
    background: #DDDCDC;
    text-decoration: none;

    &[disabled] {
      opacity: .5;
      cursor: default;
    }
  }
}
#js-prev-refcon a { background-image: image-url('contest_carousel_left_icon_normal.png'); }
#js-next-refcon a { float: right; background-image: image-url('contest_carousel_right_icon_normal.png'); }

#summary-pagination {
  .info {
    text-align: center;
    line-height: 30px;
  }

  background-color: $pagination-bar-bg;
  border: 1px solid #E3E3E3;
  border-bottom: none;
}



#summary-region {
  padding: 0 $side-padding;
  border: 1px solid #E3E3E3;

  h4 {
    color: #093A52;
  }

  ul {
    list-style: none;
    margin: 0;

    li {
      border-top: 1px solid #E6E6E6;
      padding-top: $summary-row-padding;
      margin-top: $summary-row-padding;
    }

    .party, .votes {
      color: $party-color;
      font-size: 85%;
    }

    h5, .percent {
      font-size: 14px;
      font-weight: bold;
      margin: 0;
    }

    .bar {
      width: 100%;
      height: 10px;
      background: $bar-base;
    }

    .percent, .votes {
      text-align: right;
    }

    .filler {
      height: 20px;
      background: #bbb;
    }
  }

  .show-more-less {
    text-align: center;
    margin-bottom: $summary-row-padding;
    border-top: 1px solid #E6E6E6;
    padding-top: $summary-row-padding;
    a {
      color: #093A52;
    }
  }
}

/* Landscape phones and down */
@media (max-width: 480px) {
  #results-summary-region {
    padding-bottom: 10px;
  }
}
